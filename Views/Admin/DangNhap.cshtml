@model WedBH.Models.Taikhoan

@{ ViewBag.Title = "DangNhap";
    Layout = null; }
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Content/login.css" />
    <script src="~/Scripts/jquery-3.4.1.js" type="text/javascript"></script>
    <script src="~/Scripts/core.min.js"></script>
    <script src="~/Scripts/md5.js"></script>
    <script src="~/Scripts/sweetalert.min.js" type="text/javascript"></script>
    <script src="~/Scripts/login-admin.js" type="text/javascript"></script>
    <title>Dăng nhập Admin</title>
</head>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<body>
    <div class="container">
        <div class="form">
            <div class="heading">
                <!--<img src="logo.png" class="logo">-->
                <h1>Đăng nhập quản trị</h1>
            </div>
            <div class="wrap">
                <h5 htmlAttributes: new { class="control-label col-md-2" }>Tài Khoản:</h5>
                @Html.EditorFor(model => model.TK, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TK, "", new { @class = "text-danger" })
            </div>
            <div class="wrap">
                <h5 htmlAttributes: new { class="control-label col-md-2" }>Mật Khẩu:</h5>
                @Html.EditorFor(model => model.MK, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MK, "", new { @class = "text-danger" })

            </div>
            @Html.ActionLink("Đăng nhập khách hàng", "DangNhap", "NguoiDung")
            <input type="submit" value="Đăng nhập" class="btn btn-default" />


        </div>
       
        <div class="image">
            <img src="~/images/img.jpg" class="img" alt="">
        </div>
    </div>
</body>
}
 </html>
